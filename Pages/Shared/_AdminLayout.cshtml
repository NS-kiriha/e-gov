<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @{
        var currentPage = Context.Request.Path.Value;
    }

    <!-- Sidebar -->
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-dark text-white vh-100 position-fixed" style="width: 250px; overflow-y: auto;">
        <h3 class="text-center">Admin Panel</h3>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="/admin/dashboard" class="nav-link @(currentPage == "/admin/dashboard" ? "active bg-light text-dark" : "text-white")">
                    Dashboard
                </a>
            </li>
            <li>
                <a href="/admin/patientlist" class="nav-link @(currentPage == "/admin/patientlist" ? "active bg-light text-dark" : "text-white")">
                    Patient List
                </a>
            </li>
            <li>
                <a href="/admin/settings" class="nav-link @(currentPage == "/admin/settings" ? "active bg-light text-dark" : "text-white")">
                    Settings
                </a>
            </li>
            <li>
                <form method="post" asp-page-handler="Logout">
                    <button type="submit" class="btn btn-danger mt-3 w-100">Logout</button>
                </form>
            </li>
        </ul>
    </div>

    <!-- Main Content (with margin to avoid overlap) -->
    <div class="p-4" style="margin-left: 250px;">
        @RenderBody()
    </div>
</body>
</html>
